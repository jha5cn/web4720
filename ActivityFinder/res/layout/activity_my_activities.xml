<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Linearlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <TableLayout  
    android:id="@+id/tableLayoutMyActivities"  
    android:layout_width="match_parent"  
    android:layout_height="625dp"  
    android:shrinkColumns="*"  
    android:stretchColumns="*">  
    
        <TableRow  
        android:id="@+id/tableRowTitle"  
        android:layout_height="wrap_content"  
        android:layout_width="match_parent"  
        android:gravity="center_horizontal"
        android:paddingTop="20dp">  
        <TextView  
            android:id="@+id/textViewUserList"  
            android:layout_width="match_parent"  
            android:layout_height="wrap_content"  
            android:textStyle="bold"  
            android:textSize="60dp"  
            android:text=""  
            android:gravity="center"  
            android:layout_span="6"></TextView>  
    	</TableRow>  
    	
        <TableRow  
        android:id="@+id/tableRow1"  
        android:layout_height="wrap_content"  
        android:layout_width="match_parent"
        android:weightSum="5.0"
        android:paddingLeft="40dp"
        android:paddingTop="20dp">  
        <TextView  
            android:id="@+id/TextView01"  
            android:text="Activity Name"
            android:layout_weight="1.3"
            android:textSize="20dp"
            android:textStyle="bold">
        </TextView>  
        <TextView  
            android:id="@+id/TextView02"  
            android:text="Current Number of Participants"  
            android:textStyle="bold"
            android:layout_weight="1.3"
            android:textSize="20dp">   
            </TextView>  
        <TextView  
            android:id="@+id/TextView03"  
            android:text="Meeting Time"  
            android:textStyle="bold"  
            android:layout_weight="1.3"
            android:textSize="20dp"></TextView>  
        <TextView  
            android:id="@+id/TextView04"  
            android:text="Current Location"  
            android:textStyle="bold"  
            android:layout_weight="1.3"
            android:textSize="20dp"></TextView>  
        </TableRow>         
        
    </TableLayout>
    
    <LinearLayout android:id="@+id/llfooter"
        android:layout_weight="1" 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal" 
        android:visibility="visible" 
        android:weightSum="2.0" 
        android:gravity="bottom"
        android:layout_margin="0dp"
        android:background="#000000">

        <Button android:id="@+id/home" 
            android:layout_height="fill_parent"
            android:layout_width="wrap_content" 
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:text="Home"
            android:onClick="Home"></Button>

        <Button android:id="@+id/issue" 
            android:layout_height="fill_parent"
            android:layout_width="wrap_content" 
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:text="My Activities"
            android:onClick="MyActivities"></Button>
     </LinearLayout>    

</LinearLayout>